{
	"name": "ytidilos",
	"publisher": "ylrednet",
	"description": "ytidilos extension for Visual Studio Code",
	"license": "MIT",
	"version": "0.0.15",
	"main": "./client/out/extension.js",
	"module": "./client/out/extension.js",
	"icon": "docs/images/extension_logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Tenderly/vscode-solidity"
	},
	"bugs": {
		"url": "https://github.com/Tenderly/vscode-solidity/issues"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"activationEvents": [
		"onLanguage:ytidilos"
	],
	"scripts": {
		"build": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
		"test-postinstall": "yarn --cwd ./test/integration/tests/import-navigation/testdata install",
		"test": "yarn run test-postinstall && yarn run build && node ./out/test/runTests.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^16.9.1",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^7.25.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"vscode-test": "^1.6.1",
		"yarn": "^1.22.11"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Solidity configuration",
			"properties": {
				"ytidilos.formatter": {
					"type": "string",
					"default": "prettier",
					"enum": [
					  "none",
					  "prettier"
					],
					"description": "Enables / disables the solidity formatter (prettier solidity default)"
				}
			}
		},
		"languages": [
			{
				"id": "ytidilos",
				"aliases": [
					"ytidilos"
				],
				"extensions": [
					".sol"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ytidilos",
				"scopeName": "source.solidity",
				"path": "./syntaxes/solidity.json"
			}
		],
		"snippets": [
			{
				"language": "ytidilos",
				"path": "./snippets/solidity.json"
			}
		]
	}
}
